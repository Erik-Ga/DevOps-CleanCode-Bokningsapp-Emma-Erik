@page
@model BokningsAppDevOpsCleanCode.Pages.PersonalPageModel

<div>
    @if (Model.Bookings != null && Model.Bookings.Any())
    {
        <h1><u>Dina bokningar</u></h1>
        <div>
            @foreach (var booking in Model.Bookings)
            {
                <div class="bokningPersonalPage" style="border: 3px solid black; padding: 10px; margin-bottom: 10px;">
                    <p>Datum: @booking.ChosenDateTime.ToString("yyyy-MM-dd")</p>
                    <p>Tid: @booking.ChosenTime</p>
                    <p>Behandling: @booking.ChosenTreatment</p>
                    <p>Namn: @booking.CustomerName</p>
                    <form method="post" asp-page-handler="CancelBooking" asp-route-bookingId="@booking.Id">
                        <button class="avboka" type="submit">Cancel Booking</button>
                    </form>
                </div>
            }
        </div>
    }
    else
    {
        <p>Du har inga bokningar :(</p>
    }
</div>


